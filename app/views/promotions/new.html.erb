<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1 class="banner-title vertical-align p-0 m-0">Promociones</h1>
    </div>
    <div class="col-sm-12 col-md-6 flex-middle-right">
      <%= link_to "Regresar",  promotions_path, class: "btn btn-outline-secondary mr-2" %>
      <% if @promotion.persisted? %>
        <%= link_to "Cupones", promotion_coupons_path(@promotion), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <hr class="divider">
</div>
<div class="container">
  <%= render "form", promotion: @promotion %>
</div>
