<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Editar Flujo de Caja</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= form_with(model: @cash_flow, local: true, url: folder_cash_flow_path(@folder, @cash_flow)) do |form| %>
    <div class="row">
        <div class="form-group col-sm-12">
          <div class="custom-file">
            <%= form.label :voucher, @cash_flow.voucher.attached? ? "Comprobante (Se reemplazarÃ¡ el existente)" : "Comprobante", class: "custom-file-label" %>
            <%= form.file_field :voucher, class: "custom-file-input" %>
          </div>
        </div>
    </div>
    <div class="modal-footer pt-2">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
