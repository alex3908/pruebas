<div class="accordion collapse-elements px-4 mb-4 mt-4" id="accordion-additional">
  <div class="d-flex flex-wrap justify-content-between cursor-pointer accordion-toggle" data-toggle="collapse" data-target="#collapse-section" aria-expanded="false" aria-controls="collapse-section">
    <p class="text-left vertical-align m-0 py-3 color-primary">Bitácora de cambios</p>
  </div>
  <div class="collapse" id="collapse-section" data-parent="#accordion-additional">
    <div class="widget-body">
      <div class="mt">
        <div class="width-200 float-right">
        </div>
          <p></p>
        </div>
        <% if @client_logs.empty? %>
          <p class="pb-3 m-0">No se tienen registros en la bitácora</p>
        <% end %>
        <div class="log-container">
          <div class="py-2">
            <div class="table-container-without-height">
              <table class="table table-bordered background-white">
                <thead>
                <tr>
                  <th width="20%">Accion</th>
                  <th width="20%">Responsable</th>
                  <th width="20%">Correo del responsable</th>
                  <th width="20%">Concepto</th>
                  <th width="20%">Fecha-hora</th>
                </tr>
                </thead>
                <tbody>
                <% @client_logs.each do |values| %>
                  <tr>
                    <td>
                      <%= values.action %>
                    </td>
                    <td>
                      <%= User.select(:first_name).find(values.client_users_id).first_name %>
                    </td>
                    <td>
                      <%= User.select(:email).find(values.client_users_id).email %>
                    </td>
                    <td>
                      <%= ClientUserConcept.select(:name).find(values.client_user_concept_id).name %>
                    </td>
                    <td>
                      <%= values.created_at %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
