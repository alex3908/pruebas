<tr class="nested-fields period-row row py-2">
  <%= f.hidden_field :order %>
  <td class="col-md-4">
    <%= f.number_field :payments, class: "form-control", required: true, disabled: @credit_scheme.folders.any? %>
  </td>
  <td class="col-md-4">
    <%= f.number_field :interest, min: 0, max: 100, step: 0.001, class: "form-control", required: true, disabled: @credit_scheme.folders.any? %>
  </td>
  <% unless @credit_scheme.folders.any? %>
    <td class="col-md-4">
      <%= link_to_remove_association "Eliminar periodo", f, class: "btn btn-primary" %>
    </td>
  <% end %>
</tr>
