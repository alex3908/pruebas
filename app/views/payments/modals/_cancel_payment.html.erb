<div class="modal-header">
  <h5 class="modal-title" id="cancelPaymentModalLabel">Cancelar pago</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<%= form_with(url: cancel_folder_payment_path(@folder, @payment), method: "patch", local: false) do |form| %>
  <div class="modal-body">
    <div class="form-group col-md-12 col-lg-12 mb-3">
      <%= form.label :cancelation_description, "Descripción de cancelación" %>
      <%= form.text_area :cancelation_description, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer pt-2">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">CERRAR</button>
  </div>
<% end %>
