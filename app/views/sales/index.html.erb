<div class="container">
    <div class="row pb-5">
        <div class="d-flex align-content-center flex-wrap col-sm-12 col-md-6">
            <h2 class="project-name vertical-align m-0 p-0"><%= @evo_string %></h2>
        </div>
        <div class="col-sm-12 col-md-6 d-flex flex-middle-right flex-wrap">
            <ol class="breadcrumb ol-projects">
                <li class="breadcrumb-item"><%= link_to "Dashboard", root_path %></li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
    <div class="row mb-3">
        <% if can?(:read, Commission) %>
        <div class="col-xl-3 col-sm-6 py-2">
            <%= link_to commissions_path, class: "text-decoration-none" do %>
            <div class="card bg-light text-white">
                <div class="card-body bg-light">
                    <div class="rotate">
                        <i class="fa fa-money fa-4x"></i>
                    </div>
                    <h6 class="text-uppercase text-secondary">Comisiones</h6>
                    <h2 class="display-4 text-secondary border-0 p-0 m-0"><%= @commissions %></h2>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>
        
        <% if can?(:read, Structure) && (current_user&.has_structure? || !current_user&.has_structure? && cannot?(:reserve, :quote)) && is_evo_active? %>
        <div class="col-xl-3 col-sm-6 py-2">
            <%= link_to subordinates_structures_path, class: "text-decoration-none" do %>
            <div class="card bg-light text-white">
                <div class="card-body bg-light">
                    <div class="rotate">
                        <i class="fa fa-wrench fa-4x"></i>
                    </div>
                    <h6 class="text-uppercase text-secondary">Multinivel</h6>
                    <h1 class="display-4 text-secondary border-0 p-0 m-0"><%= @structures %></h1>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>

        <% if can?(:read, :referent) %>
        <div class="col-xl-3 col-sm-6 py-2">
            <%= link_to referrals_users_path, class: "text-decoration-none" do %>
            <div class="card bg-light text-white">
                <div class="card-body bg-light">
                    <div class="rotate">
                        <i class="fa fa-users fa-4x"></i>
                    </div>
                    <h6 class="text-uppercase text-secondary">Referidos</h6>
                    <h2 class="display-4 text-secondary border-0 p-0 m-0"><%= @referrer %></h2>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>

    </div>
</div>
