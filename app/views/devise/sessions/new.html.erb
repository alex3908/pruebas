<%= render partial: "components/bar" %>

<div class="text-center devise-container">
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= link_to image_tag("brands/isotype-color-big.png"), root_path %>
      <h2 class="h4 my-3 font-weight-normal"><%= t("app.auth.log_in") %></h2>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <% if notice %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email-input", placeholder: t("app.auth.email") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "password", class: "form-control password-input", placeholder: t("app.auth.password") %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox remember-me mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t("app.auth.remember_me") %>
        </div>
      <% end %>

      <%= f.submit t("app.auth.log_in"), class: "btn btn-outline-primary" %>
      <ul class="list-inline login-register-container mt-3">
        <li class="list-inline-item login-register">
          <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %>
        </li>
      </ul>

      <p class="mt-2 privacy-policy">
        <%= t("app.auth.copy", brand: @full_company_name) %> |  <a href=<%= @privacy_policy %>><%= t("app.auth.privacy_policy") %></a>
      </p>
    <% end %>
  </div>

</div>
