<!-- Modal -->
<div class="modal fade" id="assignStageModal" aria-labelledby="assignStage">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="stage_name"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="hidden" value="" name="project_id" id="project_id">
        <input type="hidden" value="" name="phase_id" id="phase_id">
        <input type="hidden" value="" name="stage_id" id="stage_id">

        <%= render("blueprints/blueprint_for_phase",
          project: @project,
          phase: @phase,
          stages: @stages,
          extras: @extras,
          selected_stage: nil,
          texts: false,
          assignable: true,
          availability: false,
          with_styles: false) %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
