<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1 class="banner-title vertical-align p-0 m-0">Sucursales</h1>
    </div>
    <div class="col-sm-12 col-md-6 flex-middle-right">
      <ol class="breadcrumb ol-projects">
        <li class="breadcrumb-item"><%= link_to "Dashboard", root_path %></li>
        <li class="breadcrumb-item"><%= link_to "Sucursales", branches_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Ver sucursal</li>
      </ol>
    </div>
  </div>
</div>
<div class="container">
  <hr class="divider">
</div>

<div class="container">
  <div class="row">
    <div class="form-group col-sm-12 col-md-6">
      <strong>Nombre:</strong> <%= @branch.name %>
    </div>
    <div class="form-group col-sm-12 col-md-6">
      <strong>Dirección:</strong> <%= @branch.address %>
    </div>
    <div class="form-group col-sm-12 col-md-6">
      <strong>Teléfono:</strong> <%= @branch.phone %>
    </div>
  </div>
</div>

<div class="container">
  <div class="actions py-3">
    <%= link_to "Regresar", branches_path, class: "btn btn-secondary" %>
    <%= link_to "Editar", edit_branch_path(@branch), class: "btn btn-primary" %>
  </div>
</div>
