<div class="modal fade" id="missingFilesModal" tabindex="-1" role="dialog" aria-labelledby="missingFilesModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="missingFilesModalLabel">Archivos pendientes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% missing_documents(@folder, @folder.next_step).each do |missing_document| %>
          <ul class="text-warning">
            <li><%= missing_document[:name] %></li>
          </ul>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Entendido</button>
      </div>
    </div>
  </div>
</div>
