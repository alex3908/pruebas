<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1 class="banner-title vertical-align p-0 m-0">Expedientes</h1>
    </div>
    <div class="col-sm-12 col-md-6 flex-middle-right">
      <%= link_to "Pipeline", pipeline_steps_path, class: "btn btn-primary" %>
      <ol class="breadcrumb ol-projects">
        <li class="breadcrumb-item"><%= link_to "Dashboard", root_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Expedientes</li>
      </ol>
    </div>
  </div>
</div>
<div class="container">
  <hr class="divider">
</div>
<div class="container">
  <%= render "folders/filters" %>
</div>

<% if @folders.length == 0 %>
  <div class="container">
    <div class="py-5">
      <p class="text-center h5 leyend mb-5">
        No se ha encontrado ningún expediente.
        <% if can?(:reserve, :quote) %>
          <br> Comienza generando una cotización.
        <% end %>
      </p>
      <% if can?(:reserve, :quote) %>
        <div class="text-center mt-3">
          <%= link_to @project_plural, projects_path, class: "btn btn-primary jumping" %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container-fluid px-5 mx-auto w-mx-1800">
    <%= render "folders/table" %>
  </div>
<% end %>
