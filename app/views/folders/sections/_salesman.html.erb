<div class="container">
  <section class="salesman w-100">
    <div class="row">
      <div class="col-md-1 text-center py-3">
        <%= image_tag("icons/quotation-discounts.png", class: "img-fluid") %>
      </div>
      <div class="col-md-11">
        <div class="d-flex justify-content-between py-2">
          <h3 class="vertical-align m-0">Asesor</h3>
          <% if @step_role&.can_reassign_seller? %>
            <%= link_to "Reasignar", "#reassignUserModal", 'data-toggle': "modal", class: "btn btn-info" %>
          <% end %>
        </div>
        <div class="row mb-3">
          <div class="col-4 pr-0">
            <hr class="marker-bar-green">
          </div>
          <div class="col-8 pl-0">
            <hr class="marker-bar-gray">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <p>
          <strong>Nombre:</strong>
          <%= @folder.user.first_name %>
        </p>
      </div>
      <div class="col-sm-12 col-md-6">
        <p>
          <strong>Apellido:</strong>
          <%= @folder.user.last_name %>
        </p>
      </div>
      <div class="col-sm-12 col-md-6">
        <p>
          <strong>Tel√©fono:</strong>
          <%= @folder.user.phone %>
        </p>
      </div>
      <div class="col-sm-12 col-md-6">
        <p>
          <strong>Correo:</strong>
          <%= @folder.user.email %>
        </p>
      </div>
    </div>
    <%= render "folders/sections/structure" if @folder.user.structure.present? %>
  </section>
</div>
