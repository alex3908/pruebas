<div class="container">
  <div class="d-flex justify-content-between pt-3">
    <h3 class="text-left vertical-align m-0 py-3">Razón de cancelación</h3>
  </div>
  <div class="row mb-3">
      <div class="col-4 pr-0">
        <hr class="marker-bar-gray">
      </div>
      <div class="col-8 pl-0">
        <hr class="marker-bar-green">
      </div>
  </div>
  <div class="row justify-content">
    <% if @cancelation_reasons.any? %>
      <div class="col-md-12">
        <h6>Evaluaciones</h6>
        <ul class="col-md-12">
          <% @cancelation_reasons.each do |cancelation_reason| %>
            <li><%= cancelation_reason.evaluation.question %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if @folder.canceled_description.present? %>
      <div class="col-md-12">
        <h6>Descripción</h6>
        <%= @folder.canceled_description %>
      </div>
    <% end %>
  </div>
</div>
