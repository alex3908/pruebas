<div class="modal-header">
  <h5 class="modal-title">Configuraciones: <%= @structure.present? ? @structure.user&.label : "Sin responsable" %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= form_for(@structure, local: true, url: update_configuration_structure_path(@structure), method: :patch, data: { remote: true }) do |form| %>
  <div class="row">
    <div class="form-group col-sm-12 col-md-12">
      <%= form.label :max_branches, "Subordinados permitidos" %>
      <%= form.number_field :max_branches, min: 0, class: "form-control", required: true %>
    </div>
  </div>
  <div class="modal-footer pt-2">
    <div class="actions py-3">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
  </div>
  <% end %>
</div>
