<div class="modal-header">
  <h5 class="modal-title" id="prospectsModalLabel">Agregar Responsable</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body" data-controller="user-structure">
  <%= form_with(local: true, url: hire_structure_path(params[:id]), method: :patch, data: { remote: true }) do |form| %>
    <div class="row">
      <div class="form-group col-sm-12 col-md-12">
        <%= form.label :user, "Usuario" %>
        <%= form.select(:user, @users.collect { |user| ["#{user.label} (#{user.email})", user.id] }, { include_blank: true }, class: "form-control", data: { target: "user-structure.user"}, required: true) %>
      </div>
    </div>
    <div class="modal-footer pt-2">
      <div class="actions py-3">
        <%= form.submit "Guardar", class: "btn btn-primary" %>
      </div>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    </div>
  <% end %>
</div>
