<% if @error.present?  %>
  Swal.fire({
    title: 'Error',
    text: 'Ocurrió un error al intentar enviar la invitación, por favor comunícate con tu administrador.',
    type: 'error',
    confirmButtonText: 'Continuar'
  })
<% else %>
  Swal.fire({
    title: '¡Invitación enviada con éxito!',
    text: 'La invitación fue enviada al correo del usuario.',
    type: 'success',
    confirmButtonText: 'Continuar',
    customClass: {
      confirmButton: 'btn btn-success',
      cancelButton: 'btn btn-danger'
    },
    buttonsStyling: false
  }).then(function() {
    Turbolinks.visit("<%= subordinates_structures_path(@structure.parent_id) %>")
  });
<% end %>
