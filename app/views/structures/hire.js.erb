
<% if @structure.errors.empty? %>
Swal.fire({
    title: '¡Nivel actualizado con éxito!',
    text: 'Ahora <%= @structure.user.label %> tendrá acceso al sistema',
    type: 'success',
    confirmButtonText: 'Continuar',
    customClass: {
        confirmButton: 'btn btn-success',
        cancelButton: 'btn btn-danger'
    },
    buttonsStyling: false
}).then(function() {
    Turbolinks.visit("<%= subordinates_structures_path(@structure.parent_id) %>")
});
<% else %>
Swal.fire({
    title: 'Error',
    text: 'Hubo un error al intentar guardar al responsable, por favor corrobora los datos.',
    type: 'error',
    confirmButtonText: 'Continuar',
    footer: 'Si tienes alguna duda, por favor comunícate con tu responsable.'
})
<% end %>