<% if @error.present?  %>
  Swal.fire({
    title: 'Error',
    text: 'Hubo un error al intentar actualizar las configuraciones, por favor comunícate con tu administrador.',
    type: 'error',
    confirmButtonText: 'Continuar'
  })
<% else %>
$('#modal-window').modal('hide');
  Swal.fire({
    title: '¡Configuraciones actualizadas con éxito!',
    text: '',
    type: 'success',
    confirmButtonText: 'Continuar',
    customClass: {
      confirmButton: 'btn btn-success',
      cancelButton: 'btn btn-danger'
    },
    buttonsStyling: false
  }).then(function() {
    Turbolinks.visit("<%= subordinates_structures_path(@structure&.parent_id) %>")
  });
<% end %>
