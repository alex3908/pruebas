<% if @error.present?  %>
  Swal.fire({
    title: 'Error',
    text: 'Ocurrió un error al enviar el correo de recuperación de contraseña, por favor comunícate con tu administrador.',
    type: 'error',
    confirmButtonText: 'Continuar'
  })
<% else %>
  Swal.fire({
    title: 'Correo de recuperación de contraseña enviado con éxito!',
    text: 'Las instrucciones fueron enviadas al correo del usuario.',
    type: 'success',
    confirmButtonText: 'Continuar',
    customClass: {
      confirmButton: 'btn btn-success',
      cancelButton: 'btn btn-danger'
    },
    buttonsStyling: false
  }).then(function() {
    Turbolinks.visit("<%= subordinates_structures_path(@structure.parent_id) %>")
  });
<% end %>
